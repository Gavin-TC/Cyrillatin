{
    "manifest_version": 3,
    "name": "Cyrillatin",
    "description": "Allows conversion of latin phonics to cyrillic characters and vice versa.",
    "version": "1.0",

    "icons": {
        "16": "icons/logo2_16.png",
        "48": "icons/logo2_48.png",
        "128": "icons/logo2_128.png"
    },

    "permissions": [
        "contextMenus",
        "tabs"
    ],

    "content_scripts": [{
        "matches": [
            "<all_urls>"
        ],
        "js": ["content.js"],
        "run-at": "document_end"
    }],

    "background": {
        "service_worker": "background.js"
    }
}